# ==============================================
# LINKBEET BACKEND ENVIRONMENT CONFIGURATION
# ==============================================

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration (AWS Mumbai for PM-WANI Compliance)
MONGODB_URI=mongodb+srv://user:password@cluster0.kxzinlq.mongodb.net/linkbeet_dev

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OTP Provider (MSG91 for India)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=LNKBEET
MSG91_TEMPLATE_ID=your-template-id

# Alternative: Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# AWS S3 (Optional - for production file storage)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=linkbeet-media
